               <label for="" class="form-label">type account:</label>
               <select name="rol" id="" class="w-100 mt-1">
                   <option value="estandar" selected>estandar</option>
                    <option value="premium">premium</option>
               </select>
               <br>
                <label for="" class="form-label">password</label>
             <input type="text" class="password form-control" name="password" placeholder="write password" required>
            <input type="submit" value="register now" class="enviar">
         </form>
  </div>
